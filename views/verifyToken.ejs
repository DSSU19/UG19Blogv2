<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('partials/head') %>
</head>
<body>

<%- include('partials/homenav') %>
<h1>Two Factor Authentication</h1>
<form action="/twofa" method="post">
    <div class="form-input-group">
        <input type="hidden" id="csrftokenvalue" name="csrftokenvalue" value="<%=csrfToken%>">
    </div>
    <% if (email) { %>
    <input type="hidden" id="email" name="email" autocomplete="off" value="<%=email%>" >
    <input type="hidden" id="doubleSubmitCookie" name="doubleSubmitCookie" value="<%=doubleSubmitCookie%>">

    <% } %>
    <label for="verificationtoken">Kindly input your verification token:</label>
    <input type="text" id="verificationtoken" name="verificationtoken"  autocomplete="off" required>
    <% if (message) { %>
        <div>
            <p>A one time password has been to: <b> <%= message%> </b></p>
            <p>Your code will only be valid for 5 minutes</p>
        </div>
    <% } %>


    <% if (errors) { %>
        <div>
            <p> <b> <%= errors%> </b></p>
        </div>
    <% } %>
    <input type="submit" value="Submit">
</form>
</body>
</html>